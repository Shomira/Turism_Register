<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:background="@color/navColorDrawer">

    <ImageView
        android:id="@+id/imgViewLogoDrawer"
        android:layout_width="142dp"
        android:layout_height="136dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/tv_emailNavDrawer"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="example@gmail.com"
        android:textAlignment="center"
        android:textColor="#C6C2C2"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/imgViewLogoDrawer"
        app:layout_constraintStart_toStartOf="@+id/imgViewLogoDrawer"
        app:layout_constraintTop_toBottomOf="@+id/imgViewLogoDrawer" />

</androidx.constraintlayout.widget.ConstraintLayout>