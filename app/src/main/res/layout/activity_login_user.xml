<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_login_register"
    tools:context=".LoginUserActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:cardBackgroundColor="#B5FFFFFF"
        app:cardCornerRadius="30dp"
        app:cardElevation="8dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="20dp">

            <Button
                android:id="@+id/btn_login"
                android:layout_width="112dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="10dp"
                android:backgroundTint="#7CA0D6"
                android:text="LOGIN"
                app:cornerRadius="100dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/ip_contrasenia"
                app:layout_constraintStart_toStartOf="@+id/ip_contrasenia"
                app:layout_constraintTop_toBottomOf="@+id/ip_contrasenia" />

            <EditText
                android:id="@+id/ip_email"
                android:layout_width="235dp"
                android:layout_height="40dp"
                android:layout_marginTop="30dp"
                android:background="#FFFFFF"
                android:cursorVisible="false"
                android:drawableLeft="@drawable/user"
                android:ems="20"
                android:hint="  Correo"
                android:inputType="textPersonName"
                android:paddingStart="10dp"
                android:paddingLeft="5dp"
                android:textAlignment="viewStart"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_title" />

            <EditText
                android:id="@+id/ip_contrasenia"
                android:layout_width="235dp"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:background="#FFFFFF"
                android:drawableLeft="@drawable/pass"
                android:ems="10"
                android:hint="  ContraseÃ±a"
                android:inputType="textPersonName|textPassword"
                android:paddingStart="6dp"
                android:paddingLeft="5dp"
                android:textAlignment="viewStart"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="@+id/ip_email"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/ip_email"
                app:layout_constraintTop_toBottomOf="@+id/ip_email" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Bienvenid@"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="25sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.523"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tw_registrate_pregunta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="No estas registrado?"
                android:textColor="#3B73C6"
                android:textSize="12sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ip_contrasenia" />

            <TextView
                android:id="@+id/tw_registrarse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Registrarte"
                android:textColor="#3B73C6"
                android:textSize="12sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ip_contrasenia" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>


</FrameLayout>