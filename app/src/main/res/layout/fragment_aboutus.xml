<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="5dp"
    tools:context=".fragments.HomeFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ImageView
            android:id="@+id/imgView_aboutUs"
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:src="@drawable/apoyo_estudiantes"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_parrafo1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:justificationMode="inter_word"
            android:paddingLeft="35dp"
            android:paddingRight="35dp"
            android:text=""
            android:textColor="#000000"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imgView_aboutUs" />

        <TextView
            android:id="@+id/tv_parrafo2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:paddingLeft="35dp"
            android:paddingRight="35dp"
            android:paddingBottom="50dp"
            android:text=""
            android:textColor="#000000"
            android:textSize="20sp"
            android:justificationMode="inter_word"
            app:layout_constraintEnd_toEndOf="@+id/tv_parrafo1"
            app:layout_constraintStart_toStartOf="@+id/tv_parrafo1"
            app:layout_constraintTop_toBottomOf="@+id/tv_parrafo1" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>