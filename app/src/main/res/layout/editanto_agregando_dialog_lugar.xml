<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view_dialog_modificar_agregar_lugar"
    android:layout_width="300dp"
    android:layout_height="150dp"
    android:layout_gravity="center"
    app:cardBackgroundColor="#A8DC6C"
    app:cardCornerRadius="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/tv_title_guardando_editando_lugar_dialog"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginVertical="10dp"
            android:gravity="center"
            android:text="GUARDANDO"
            android:textColor="@color/black"
            android:textSize="27sp" />

        <ProgressBar
            android:id="@+id/progressBar_guardando_editando_lugar_dialog"
            style="?android:attr/progressBarStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:indeterminate="false"
            android:indeterminateTint="@color/partSup"
            android:indeterminateTintMode="src_in" />
    </LinearLayout>

</androidx.cardview.widget.CardView>