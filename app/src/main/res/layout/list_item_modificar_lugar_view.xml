<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="8dp"
    app:cardCornerRadius="8dp"
    android:layout_marginHorizontal="15dp"
    android:layout_marginVertical="5dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <com.github.chrisbanes.photoview.PhotoView
            android:id="@+id/photo_modificar_lugar_item"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@drawable/addlugar"
            android:scaleType="centerCrop"
            android:layout_weight="1"
            />
        <TextView
            android:id="@+id/tv_item_modificar_lugar"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="Las tres cascadas"
            android:gravity="center"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:textSize="18sp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#C7ED9B"
                android:orientation="vertical"
                android:paddingHorizontal="5dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    >
                    <TextView
                        android:layout_width="115dp"
                        android:layout_height="match_parent"
                        android:text="Campos llenos: "
                        android:gravity="center_vertical"
                        android:textColor="@color/black"
                        />
                    <TextView
                        android:id="@+id/item_total_completado_modificar"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:text="172/172"
                        android:textColor="@color/black"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    >
                    <com.google.android.material.progressindicator.LinearProgressIndicator
                        android:id="@+id/item_progres_bar"
                        android:layout_gravity="center"
                        android:layout_width="115dp"
                        android:layout_height="40dp"
                        android:paddingRight="5dp"
                        android:paddingVertical="8dp"
                        android:progressBackgroundTint="#9C27B0"
                        app:trackThickness="6dp"
                        app:trackCornerRadius="100dp"
                        android:theme="@style/ProgressBarStyle" />
                    <TextView
                        android:id="@+id/item_porcentaje_total_llemando_modificar"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:text="99.9%"
                        android:textColor="@color/black"
                        />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                >
                <ImageButton
                    android:id="@+id/btn_item_edit_lugar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_baseline_edit_24"
                    android:background="@color/blueBajo"
                    android:layout_weight="1"/>

                <ImageButton
                    android:id="@+id/btn_item_delete_lugar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/red"
                    android:src="@drawable/ic_baseline_delete_24" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>