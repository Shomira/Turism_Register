<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/register"
    tools:context=".RegisterActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        app:layout_constraintEnd_toEndOf="@+id/textView2"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:srcCompat="@drawable/user_circle" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="164dp"
        android:text="Bienvenid@"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/ip_contrasenia"
        android:layout_width="223dp"
        android:layout_height="32dp"
        android:layout_marginTop="12dp"
        android:background="#FFFFFF"
        android:drawableLeft="@drawable/pass"
        android:ems="10"
        android:hint="  Contraseña"
        android:inputType="textPassword"
        android:paddingLeft="5dp"
        android:password="true"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/ip_correo_r"
        app:layout_constraintStart_toStartOf="@+id/ip_correo_r"
        app:layout_constraintTop_toBottomOf="@+id/ip_correo_r" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/ip_usuario_r"
        android:layout_width="223dp"
        android:layout_height="32dp"
        android:layout_marginTop="12dp"
        android:background="#FFFFFF"
        android:drawableLeft="@drawable/user"
        android:hint="  Usuario"
        android:linksClickable="false"
        android:paddingLeft="5dp"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/ip_nombre_r"
        app:layout_constraintStart_toStartOf="@+id/ip_nombre_r"
        app:layout_constraintTop_toBottomOf="@+id/ip_nombre_r" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/ip_contrasenia2_r"
        android:layout_width="223dp"
        android:layout_height="32dp"
        android:layout_marginTop="16dp"
        android:background="#FFFFFF"
        android:drawableLeft="@drawable/lock_pass_ic"
        android:hint="  Cofirmar contraseña"
        android:paddingLeft="5dp"
        android:password="true"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/ip_contrasenia"
        app:layout_constraintStart_toStartOf="@+id/ip_contrasenia"
        app:layout_constraintTop_toBottomOf="@+id/ip_contrasenia" />

    <EditText
        android:id="@+id/ip_nombre_r"
        android:layout_width="223dp"
        android:layout_height="32dp"
        android:layout_marginTop="17dp"
        android:background="#FFFFFF"
        android:drawableLeft="@drawable/user_name_ic"
        android:hint="  Nombre"
        android:inputType="textPersonName"
        android:paddingLeft="5dp"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <EditText
        android:id="@+id/ip_correo_r"
        android:layout_width="223dp"
        android:layout_height="32dp"
        android:layout_marginTop="12dp"
        android:background="#FFFFFF"
        android:drawableLeft="@drawable/email_ic"
        android:ems="10"
        android:hint="  Correo"
        android:inputType="textPersonName"
        android:paddingLeft="5dp"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/ip_usuario_r"
        app:layout_constraintStart_toStartOf="@+id/ip_usuario_r"
        app:layout_constraintTop_toBottomOf="@+id/ip_usuario_r" />

    <Button
        android:id="@+id/btn_registrar"
        android:layout_width="112dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:backgroundTint="#7CA0D6"
        android:text="Registrar"
        android:textSize="12sp"
        app:cornerRadius="100dp"
        app:layout_constraintEnd_toEndOf="@+id/ip_contrasenia2_r"
        app:layout_constraintStart_toStartOf="@+id/ip_contrasenia2_r"
        app:layout_constraintTop_toBottomOf="@+id/ip_contrasenia2_r" />
</androidx.constraintlayout.widget.ConstraintLayout>